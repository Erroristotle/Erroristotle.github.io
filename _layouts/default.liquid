<!doctype html>
<html lang="{{ site.lang }}">
  <!-- Head -->
  <head>
    {% if page.redirect %}
      {% if page.redirect == true %}
        {% assign redirect = site.baseurl | append: '/' %}
      {% elsif page.redirect contains '://' %}
        {% assign redirect = page.redirect %}
      {% else %}
        {% assign redirect = page.redirect | relative_url %}
      {% endif %}
      <meta http-equiv="refresh" content="3; url={{ redirect }}">
    {% endif %}
    {% include head.liquid %}
  </head>

  <!-- Body -->
  <body class="{% if site.navbar_fixed %}fixed-top-nav{% endif %} {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
    <!-- Header -->
    {% include header.liquid %}

    <!-- Content -->
    <div class="container mt-5" role="main">
      {% if page.toc and page.toc.sidebar %}
        {% if page.toc.sidebar == 'right' %}
          <div class="row">
            <!-- main content area -->
            <div class="col-sm-9">{{ content }}</div>
            <!-- sidebar, which will move to the top on a small screen -->
            <div class="col-sm-3">
              <nav id="toc-sidebar" class="sticky-top"></nav>
            </div>
          </div>
        {% else %}
          <div class="row">
            <!-- sidebar, which will move to the top on a small screen -->
            <div class="col-sm-3">
              <nav id="toc-sidebar" class="sticky-top"></nav>
            </div>
            <!-- main content area -->
            <div class="col-sm-9">{{ content }}</div>
          </div>
        {% endif %}
      {% else %}
        {{ content }}
      {% endif %}
    </div>

    <!-- Footer -->
    {% include footer.liquid %}

    <!-- JavaScripts -->
    <script src="{{ site.baseurl }}/assets/js/jquery.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/bootstrap.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/masonry.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/mermaid.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/diff2html.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/leaflet.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/chartjs.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/echarts.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/vega.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/tikzjax.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/typograms.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/misc.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/badges.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/mathjax.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/pseudocode.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/analytics.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/progressBar.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/wechatModal.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/imageLayouts.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/jekyll_tabs.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/back_to_top.min.js"></script>
    <script src="{{ site.baseurl }}/assets/js/search.min.js"></script>
  </body>
</html>
